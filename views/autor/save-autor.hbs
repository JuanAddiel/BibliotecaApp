<div class="row">
    <div class="col-md-6 offset-3 mt-5">
        <div class="card card-gris">
            <div class="card-header bg-dark text-white">
                {{#if editMode}}Edicion{{else}}Creacion{{/if}} de Autores
            </div>
            <div class="card-body">
                <form method="POST" action="{{#if editMode}}/autor/edit-autor{{else}}/autor/create-autor{{/if}}">
                    <div class="mb-3 label">
                        <label for="name" class="form-label text-white">Nombre</label>
                        <input type="text" class="form-control" id="name" name="nombre"
                            value="{{#if editMode}}{{autor.nombre}}{{/if}}" required/>

                        <label for="correo" class="form-label text-white">Correo</label>
                        <input type="text" class="form-control" id="correo" name="correo"
                        value="{{#if editMode}}{{autor.correo}}{{/if}}" required/>
                    </div>

                    {{#if editMode}}

                    <input type="hidden" name="Id" value="{{autor.id}}">

                    {{/if}}
                    <a href="/autor" class="btn btn-danger">Atras</a>
                    <button type="submit" class="btn btn-primary">{{#if editMode}}Editar{{else}}Crear{{/if}}</button>
                </form>

            </div>
        </div>
    </div>